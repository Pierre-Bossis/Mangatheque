@page
@model Mangatheque.Web.UI.Pages.ContactModel
@{
    ViewData["Title"] = "Contact";
}

<h1>@ViewData["Title"]ez nous !</h1>
<div class="container">
    <div class="row">
        <div class="col">
            <form method="post">
                <div class="form-group">
                    <label class="control-label">Adresse mail</label>
                    <input placeholder="exemple@hotmail.com" class="form-control" />
                </div><!---->
                <div class="form-group">
                    <label class="control-label">Résumé</label>
                    <input placeholder="Résumé" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="control-label">Message</label>
                    <textarea class="form-control" rows="7" placeholder="message... (caractères max. 200)" maxlength="200"></textarea>
                </div>
                <button class="btn btn-secondary">Envoyer</button>
            </form>
        </div>
    </div>
</div>