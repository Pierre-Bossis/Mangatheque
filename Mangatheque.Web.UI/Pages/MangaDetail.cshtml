@page "/Manga-detail/"
@model Mangatheque.Web.UI.Pages.MangaDetailModel
@{
    ViewData["Title"] = Model.manga?.Nom + " " + Model.manga?.Numero + " " + "Detail";

    object pictureAdapter(byte[] picture)
    {
        var base64 = Convert.ToBase64String(picture);
        var Image = String.Format("data:image/jpg;base64,{0}", base64);
        return Image;
    }
}

<h1>@Model.manga?.Nom Tome @Model.manga?.Numero</h1>
<div class="row">
    <div class="col-lg-7 col-sm-4">
        <div class="box_main">
            <img src="@pictureAdapter(@Model.manga.Couverture)" /> <br />
        </div>
    </div>
    <div class="col-lg-5 col-sm-4">
        <div class="box_main">
            <p>
                Série : @Model.manga.Nom<br /><br />
                Numéro du tome : @Model.manga.Numero<br /><br />
                Auteur : @Model.manga.Auteur<br /><br />
                Genre du manga : @Model.manga.Genre<br /><br />
                Date de publication : @Model.manga.DatePublication.ToString("dd MMM yyyy")<br /><br /><br />
                @Model.manga.stock.Label<br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br />

            </p>
        </div>
    </div>
    <div class="col-lg-12 col-sm-4">
        <div class="box_main">
            <b>Résumé :</b><br /><br />
            <p>
